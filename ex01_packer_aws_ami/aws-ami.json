{
  "variables": {
    "aws_account_id": "{{env `AWS_ACCOUNT_ID`}}",
    "source_ami": "ami-042e8287309f5df03"
  },
  "builders": [
    {
      "type": "amazon-ebs",
      "access_key": "{{user `aws_access_key`}}",
      "secret_key": "{{user `aws_secret_key`}}",
      "region": "us-east-1",
      "source_ami": "{{user `source_ami`}}",
      "source_ami_filter": {
        "most_recent": true
      },
      "instance_type": "t2.micro",
      "ssh_username": "ubuntu",
      "ami_name": "packer-first-aws-ami {{timestamp}}",
      "ami_description": "My first aws ami (ubuntu) via packer."
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "script": "./scripts/install-docker.sh"
    }
  ]
}
